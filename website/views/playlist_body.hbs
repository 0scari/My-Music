                    <script>
                        $(document).ready(() => {
                            $('#deletePlaylist').click(e => {
                                e.preventDefault()
                                $.ajax({
                                    type: 'DELETE',
                                    url: '/playlist/{{playlist.id}}',
                                }).then(
                                        () => $(location).attr('href', '/playlists')
                                )
                            })
                        })
                    </script>
